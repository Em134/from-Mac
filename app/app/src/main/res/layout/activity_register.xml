     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"

        app:layout_constraintBottom_toBottomOf="@+id/et_name"
        app:layout_constraintEnd_toStartOf="@+id/et_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_name" />

     <com.example.asus.graduationproject.MyView.RegisterEditview
        android:id="@+id/et_name"
        android:paddingStart="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="用户名由4~10位数字和字母组成"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintWidth_percent="0.72" />
     <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="密码"
          app:layout_constraintBottom_toBottomOf="@+id/et_pwd"
          app:layout_constraintEnd_toStartOf="@+id/et_pwd"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@+id/et_pwd" />

     <com.example.asus.graduationproject.MyView.RegisterEditview
         android:id="@+id/et_pwd"
         android:layout_width="0dp"
         android:layout_height="0dp"
         android:hint="密码由6~16位数字和字母组合"
         android:paddingStart="5dp"
         android:inputType="textPassword"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHeight_percent="0.075"
         app:layout_constraintHorizontal_bias="0.6"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintVertical_bias="0.33999997"
         app:layout_constraintWidth_percent="0.72" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd_again"
        app:layout_constraintEnd_toStartOf="@+id/et_pwd_again"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_pwd_again" />

    <com.example.asus.graduationproject.MyView.RegisterEditview
           android:id="@+id/et_pwd_again"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:paddingStart="5dp"
           android:hint="请确保两次密码一致"
           android:inputType="textPassword"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHeight_percent="0.075"
           app:layout_constraintHorizontal_bias="0.6"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.43"
           app:layout_constraintWidth_percent="0.72" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        app:layout_constraintBottom_toBottomOf="@+id/et_phone"
        app:layout_constraintEnd_toStartOf="@+id/et_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_phone" />

            <com.example.asus.graduationproject.MyView.RegisterEditview
                   android:id="@+id/et_phone"
                   android:layout_width="0dp"
                   android:layout_height="0dp"
                   android:paddingStart="5dp"
                   android:hint="请输入您的手机号"
                   android:inputType="phone"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHeight_percent="0.075"
                   app:layout_constraintHorizontal_bias="0.6"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.53"
                   app:layout_constraintWidth_percent="0.72" />

         <Button
             android:id="@+id/btn_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="注册"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="@+id/et_phone"
             app:layout_constraintStart_toStartOf="@+id/et_phone"
             app:layout_constraintTop_toBottomOf="@+id/et_phone"
             app:layout_constraintVertical_bias="0.01999998" />

</androidx.constraintlayout.widget.ConstraintLayout>