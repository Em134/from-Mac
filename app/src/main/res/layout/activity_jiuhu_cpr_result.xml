<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="CPR心脏复苏术"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:text="处理方法"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="判断意识，如无反应立即呼救，仰卧位置于地面或硬板上，开放气道，清理口腔异物，判断有无呼吸，若无呼吸，立即口对口吹气两次，保持头后仰，另一只手检查颈动脉有无搏动，若有脉搏，可仅做口对口人工呼吸，若无，立即进行胸外心脏按压，每按压30次，口对口吹气2次，然后重新定位，再按压30次，如此反复进行，心脏复苏开始一分钟或连续操作四个循环后，检查一次呼吸、脉搏和瞳孔变化，以后每进行4-5分钟检查一次，每次不超过5秒，若在担架或救护车上，则不间断进行，如必须进行则不超过5~10秒"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/coldback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:text="上传记录并返回"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
