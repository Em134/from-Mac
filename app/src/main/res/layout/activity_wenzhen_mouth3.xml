<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="21dp"
        android:text="您的主要症状是什么？"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/mouthpain16"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="A  局部先感病原牙痛，延及邻牙，面部相应部位肿胀，多个牙齿松动，有脓液从牙周溢出，有不程度的张口限制"
               android:textSize="20dp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/mouthpain17"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="B  浅表脓肿略高出体表，红肿热痛及波动感，浓度浓重表面有水肿以及明显的局部压痛，感染性发热"
               android:textSize="20dp" />

       </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:id="@+id/mouthpain18"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="C 上腹部堵闷，不适，恶心，呕吐胸闷，憋气，低血压，休克，突然心悸，心率失常"
                android:textSize="20dp" />
        </LinearLayout>



    </LinearLayout>





</LinearLayout>
