<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="21dp"
        android:text="您感到不适大概有多久了？"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/timelong1"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="A  刚开始一到两天"
                android:textSize="20dp" />
        </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content">
         <Button
             android:layout_width="match_parent"
             android:id="@+id/timelong2"
             android:layout_height="wrap_content"
             android:background="@color/buttonBackground"
             android:text="B  持续一周了，我很痛苦"
             android:textSize="20dp" />

     </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/timelong3"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="C 持续两周左右了，我快习惯了"
               android:textSize="20dp" />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/timelong4"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="D 我这是老毛病了，伴随我好几年了"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>





</LinearLayout>
