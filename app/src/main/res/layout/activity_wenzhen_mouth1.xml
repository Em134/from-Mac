<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="21dp"
        android:text="您的主要症状是什么？"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/mouthpain9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="A  轻度烫伤致使年粘膜发红，有轻微疼痛或麻木感，热损伤严重时形成水疱，疱溃后形成糜烂，疼痛明显"
                android:textSize="20dp" />

        </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content">

         <Button
             android:id="@+id/mouthpain10"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/buttonBackground"
             android:text="B  有激发性牙龈出血或口臭，轻按牙龈可见溢脓，牙齿松动或移位"
             android:textSize="20dp" />
     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/mouthpain11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="C 柏油便，骨压痛，眼底出血或渗出，容易发生青肿，点状出血，贫血"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>




</LinearLayout>
