<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="很遗憾，您可能患有："
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="由寒化热"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="病情简介"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="黄苔与发热导致的消化功能紊乱有关，口腔唾液减少，是胃热炽盛，多由病邪入里化热所致"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:text="推荐用药"
        android:layout_height="wrap_content" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:text="表邪化热，风热耗津。饮食宜清淡，在生活中，舌头发白的人一定要饮食清淡一点，多吃些容易消化的食物。多吃蔬菜，每天都应摄入足够的蔬菜，比如芹菜、油菜等，增加胃肠蠕动，促进消化。多吃健脾胃的食物脾胃不和，多吃健脾胃的食物，比如苹果，能健脾补气益胃，生津润燥;多吃包心菜、菠菜、南瓜、胡萝卜等，对补益脾胃都很好的。 如果想增加健脾胃效果，可以把人参、茯苓、黄芪、白术、甘草等，与食物配成药膳，效果更好。"
               android:textSize="18dp" />


       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:id="@+id/coldback1"
            android:text="上传记录并返回"
            android:textSize="20dp" />
    </LinearLayout>



</LinearLayout>
