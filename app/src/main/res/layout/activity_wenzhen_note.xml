<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="21dp"
        android:text="您的主要症状是什么？"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/notehot1"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="A  初期鼻子干涩且伴有咽痒或者灼烧感"
                android:textSize="20dp" />

        </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="10dp"
          android:layout_height="wrap_content">

          <Button
              android:layout_width="match_parent"
              android:id="@+id/notehot2"
              android:layout_height="wrap_content"
              android:background="@color/buttonBackground"
              android:text="B  鼻阻塞，流脓鼻涕"
              android:textSize="20dp" />
      </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/notehot3"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="C 有粘稠物不易咳出，伴有恶心"
               android:textSize="20dp" />

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/notehot4"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="D 鼻子干涩且易出血"
               android:textSize="20dp" />
       </LinearLayout>

    </LinearLayout>




</LinearLayout>
