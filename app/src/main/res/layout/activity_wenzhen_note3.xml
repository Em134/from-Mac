<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="21dp"
        android:text="您的主要症状是什么？"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/notepain1"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="A  咽部充血肿胀，吞咽唾液时疼痛"
                android:textSize="20dp" />
        </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:id="@+id/notepain2"
               android:layout_height="wrap_content"
               android:background="@color/buttonBackground"
               android:text="B  咽喉有异样感觉，如幻觉，球塞感，蚁行感"
               android:textSize="20dp" />

       </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/notepain3"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="C 伴随头疼以及关节酸疼"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/notepain4"
                android:layout_height="wrap_content"
                android:background="@color/buttonBackground"
                android:text="D 没有更多症状"
                android:textSize="20dp" />
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
