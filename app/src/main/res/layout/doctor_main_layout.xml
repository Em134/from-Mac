<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/colorTextBackgroud">

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="你好士兵，欢迎来到军康宝！"
            android:textColor="#000"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/txt_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_recomment"
            android:drawableLeft="@mipmap/whatever_main"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:onClick="oneOnClick"
            android:text="推荐"

            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_recomment"
            android:drawableLeft="@mipmap/whatever_main"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:onClick="oneOnClick"
            android:text="指导"

            android:textColor="#000" />
        <TextView
            android:id="@+id/txt_poi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_recomment"
            android:drawablePadding="5dp"
            android:drawableLeft="@mipmap/navagation_main"

            android:gravity="center"
            android:onClick="oneOnClick"
            android:text="诊断"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_recomment"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/doctor_main_1"

            android:gravity="center"
            android:onClick="oneOnClick"
            android:text="用户"
            android:textColor="#000" />

        <TextView
            android:id="@+id/txt_xinglingliaoyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_recomment"
            android:drawableLeft="@drawable/phex"
            android:drawablePadding="3dp"

            android:gravity="center"
            android:onClick="oneOnClick"
            android:text="心灵聊愈"
            android:textColor="#000" />


    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/tab_menu" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_menu"
        android:layout_below="@id/tab_title">

    </FrameLayout>


</RelativeLayout>
