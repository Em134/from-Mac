<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="很遗憾，您可能患有："
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="鼻咽炎"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="病情简介"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="鼻咽部黏膜、黏膜下和淋巴组织的炎症即为鼻咽炎，分为急性鼻咽炎和慢性鼻咽炎。鼻咽炎病人鼻咽干燥不适，有黏稠分泌物不易咳出，故咳嗽频繁，常伴有恶心，严重者有声嘶、咽痛、头痛、头晕、乏力、消化不良、低热等局部或全身症状。鼻咽部检查见黏膜慢性充血、增生、肥厚，覆以分泌物或干痂。"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:text="推荐用药"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="要注意保暖，平时要注意多饮水、充分休息、保证周围空气清新、避开辛辣刺激食物等。增强人体免疫力，可通过游泳、跑步等规则性运动，增强体质，多吃新的鲜蔬菜、水果，但要注意不可冷食，尤其夏季禁忌喝冰镇饮料等冰凉食物。多吃富含蛋白质的食物，如牛奶、鲜鱼、大豆等等。避开吸烟、饮酒、熬夜等不良嗜好，注意个人卫生，做好周围环境的清洁工作。如果发现高热、咳嗽、胸闷、恶心等症状，要及时到医院接受诊治，以免错过治疗的最佳时期。"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/coldback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:text="上传记录并返回"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
