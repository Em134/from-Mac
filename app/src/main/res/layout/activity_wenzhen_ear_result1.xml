<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="很遗憾，您可能患有："
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="搏动性耳鸣"
        android:textSize="35dp" />


    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="病情简介"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text=" 搏动性耳鸣（pulsatile tinnitus）是一种有节律的耳鸣。由患者头颈部血管或肌肉产生，并通过骨骼/血管和血流传导至耳蜗而感知的。即患者主诉耳内有如同心脏或血管脉搏跳动样耳鸣声，有的如波涛声或有的如脉搏声，很有规律，仔细观察其跳动节律，多数和心脏跳动次数一致。搏动性耳鸣由血管因素导致。"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:text="推荐用药"
        android:layout_height="wrap_content" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:text="推荐用药：耳鸣严重者要解除精神上的压力和思想包袱，适当服用抗惊厥药和镇静药。搏动性耳鸣可由宽带噪声所掩蔽，纯音不能掩蔽。如严重影响日常生活时，还可配成特制耳鸣掩蔽器。搏动性耳鸣发病基础属于血管结构的异常，所以药物治疗基本无效，若属病情顽固，可采取手术治疗相应的原发疾病。某些耳鸣患者用针灸治疗后也有一定的效果"
               android:textSize="18dp" />


       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonBackground"
            android:id="@+id/coldback1"
            android:text="上传记录并返回"
            android:textSize="20dp" />
    </LinearLayout>



</LinearLayout>
